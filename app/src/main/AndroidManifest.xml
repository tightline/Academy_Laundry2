<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ryan.academy_laundry2">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="ryan.academy_laundry2.app.AppController"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/academy"
>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.HomeScreen"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.EnterWeight"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.ViewPreviousWeights"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

    </application>

</manifest>